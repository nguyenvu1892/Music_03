<div class="header">
    <div class="bottom-header">
      <div class="container">
        <div class="header-bottom-left">
          <div class="logo">
            <%= link_to root_path do %>
              <%= image_tag "logo.jpg" %>
            <% end %>
          </div>
          <div class="search">
            <form>
              <input type="text" value="" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}">
              <input type="submit" value="SEARCH">
            </form>
          </div>
          <div class="clearfix"> </div>
        </div>
        <div class="header-bottom-right">
            <div class="account"><%= t "views.layouts.header.acc" %></div>
              <ul class="login">
                <li><%= t "views.layouts.header.login" %></li> |
                <li><%= t "views.layouts.header.signup" %></li>
              </ul>
          <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
      </div>
    </div>
  </div>
