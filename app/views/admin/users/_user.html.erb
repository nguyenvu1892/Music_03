<tr>
  <td><%= link_to user.name, user_path(user) %></td>
  <td><%= user.email %></td>
  <td><%= activate_user user %></td>
  <td><%= user.created_at.strftime format: :date_month_year_concise %></td>
  <td>
    <%= admin_user user %>
  </td>
  <% if unless user.admin? %>
    <td>
      <%= link_to edit_admin_user_path(user) do %>
        <span><i class="fa fa-edit fa-1px"></i></span>
      <% end %>
    </td>
    <td>
      <%= link_to admin_user_path(user), method: :delete, data: {confirm: t("flash.danger")} do %>
        <span><i class="fa fa-times fa-1px"></i></span>
      <% end %>
    </td>
  <% end %>
  <% end %>
</tr>
